<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:buttonStyle">@style/StandardButton</item>
    </style>

    <style name="StandardButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/colorButtonGray</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="CapstoneButton" parent="StandardButton">
        <item name="android:background">@color/colorButtonOrange</item>
    </style>

</resources>
